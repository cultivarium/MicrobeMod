{
  "black-formatter.args": [
    "--line-length=120"
  ],
  "isort.args":["--profile", "black"],
  "pylint.args": [
    "--rcfile=setup.cfg"
  ],
  "[python]": {
    "editor.defaultformatter": "ms-python.black-formatter",
    "editor.formatonsave": true,
    "editor.insertspaces": true,
    "editor.tabsize": 4,
    "editor.codeactionsonsave": {
      "source.organizeimports": "explicit"
    }
  }
}
